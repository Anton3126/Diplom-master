@model WebApplication1.Models.Wallet
@{
    ViewData["Title"] = "Детали кошелька";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Детали кошелька</h2>
    <div>
        <dl class="dl-horizontal">
            <dt>
                Название кошелька
            </dt>
            <dd>
                @Html.DisplayFor(model => model.WalletName)
            </dd>
            <dt>
                Валюта
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Currency)
            </dd>
            <dt>
                Баланс
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Balance)
            </dd>
            <dt>
                Фирма
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Firm.FirmName)
            </dd>
            <dt>
                Cотрудник
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.FirstName)
                @Html.DisplayFor(model => model.User.LastName)
            </dd>
        </dl>
    </div>
    <div>
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Действия
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a asp-action="Edit" asp-route-id="@Model.WalletID">Изменить</a></li>
                <li><a asp-action="Delete" asp-route-id="@Model.WalletID">Удалить</a></li>
                <li><a asp-controller="Transactions" asp-route-id="@Model.WalletID" asp-action="Create">Перевод между кошельками</a></li>
                <li><a asp-controller="Transactions" asp-route-id="@Model.WalletID" asp-action="CreateOneSideTransaction">Одиночный перевод</a></li>
                <li><a asp-controller="Transactions" asp-route-id="@Model.WalletID" asp-action="IndexIndividual">Выписка</a></li>
            </ul>
                |  <a asp-action="Index">Список кошельков</a>
        </div>
    </div>
</div>

@model WebApplication1.Models.Wallet

@{
    ViewData["Title"] = "CreateWalletOther";
}

<div class="container">

    <h2>Добавить кошелек</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateWalletOther">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="WalletName" class="control-label"></label>
                    <input asp-for="WalletName" class="form-control" />
                    <span asp-validation-for="WalletName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Currency" class="control-label">Валюта</label>
                    <select asp-for="Currency" class="form-control" asp-items="ViewBag.Curryncies"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Отмена</a>
    </div>

</div>

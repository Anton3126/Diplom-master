<table class="table">
    <thead>
        <tr>
            <th style="width:20%;">
                Номер кошелька
            </th>
            <th style="width:20%;">
                Название кошелька
            </th>
            <th style="width:20%;">
                Валюта
            </th>
            <th style="width:20%;">
                Баланс
            </th>
            <th style="width:20%;">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

    <tbody>
        @foreach (var item in Model)
        {
            @if (item.FirmID == null & item.UserId == null)
            {
                <tr>
                    <td>
                        <a asp-controller="Wallets" asp-route-id="@item.WalletID" asp-action="Details">
                            @Html.DisplayFor(modelItem => item.WalletName)
                        </a>
                    </td>
                    <td>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Currency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Действия
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a asp-action="Edit" asp-route-id="@item.WalletID">Изменить</a><br>
                                <a asp-action="Details" asp-route-id="@item.WalletID">Детали</a><br>
                                <a asp-action="Delete" asp-route-id="@item.WalletID">Удалить</a><br>
                                <a asp-controller="Transactions" asp-route-id="@item.WalletID" asp-action="Create">Перевод между кошельками</a><br>
                                <a asp-controller="Transactions" asp-route-id="@item.WalletID" asp-action="CreateOneSideTransaction">Одиночный перевод</a><br>
                                <a asp-controller="Transactions" asp-route-id="@item.WalletID" asp-action="IndexIndividual">Выписка</a>
                            </div>
                        </div>
                    </td>
                </tr>
             }
         }
    </tbody>
</table>
<br>
<br>
<h4>Количество кошельков: @Model.Count()</h4>

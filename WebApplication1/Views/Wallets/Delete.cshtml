@model WebApplication1.Models.Wallet

@{
    ViewData["Title"] = "Удалить";
}

<div class="container">

    <h2>Удалить</h2>

    <h3>Вы уверены, что хотите удалить кошелек?</h3>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Баланс
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Balance)
            </dd>
            <dt>
                Валюта
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Currency)
            </dd>
            <dt>
                Название кошелька
            </dt>
            <dd>
                @Html.DisplayFor(model => model.WalletName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="WalletID" />
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            <a asp-action="Index">Отмена</a>
        </form>
    </div>

</div>

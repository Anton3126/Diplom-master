@model WebApplication1.Models.Wallet

@{
    ViewData["Title"] = "Изменить кошелек";
}

<div class="container">

    <h2>Изменить кошелек</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WalletID" />
                <div class="form-group">
                    <label asp-for="WalletName" class="control-label">Название кошелька</label>
                    <input asp-for="WalletName" class="form-control" />
                    <span asp-validation-for="WalletName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Отмена</a>
    </div>

</div>

@model WebApplication1.Models.Firm

@{
    ViewData["Title"] = "Изменить фирму";
}
<div class="container">

    <h2>Изменить фирму</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="FirmID" />
                <div class="form-group">
                    <label asp-for="FirmName" class="control-label">Название фирмы</label>
                    <input asp-for="FirmName" class="form-control" />
                    <span asp-validation-for="FirmName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirmAddress" class="control-label">Адрес</label>
                    <input asp-for="FirmAddress" class="form-control" />
                    <span asp-validation-for="FirmAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Отмена</a>
    </div>

</div>

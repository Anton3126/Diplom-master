@model WebApplication1.Models.Task

@{
    ViewData["Title"] = "Добавить задачу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h2>Добавить задачу</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Комментарий</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Исполнитель</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Дата</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Выполняет</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="ProjectTasks" asp-action="Index">Отмена</a>
    </div>

</div>

@using Microsoft.AspNetCore.Identity
@model WebApplication1.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<div class="container">
    <h2>Добавить сотрудника</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Users">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Никнейм</label>
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label">Отчество</label>
                    <input type="text" asp-for="MiddleName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label">Год рождения</label>
                    <input type="number" asp-for="Year" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirmID" class="control-label">Фирма</label>
                    <select asp-for="FirmID" class="form-control" asp-items="ViewBag.Firms"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Currency" class="control-label">Валюта кошелька</label>
                    <select asp-for="Currency" class="form-control" asp-items="ViewBag.Curryncies"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input type="text" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Роли</label><br/>
                       @foreach (IdentityRole role in Model.AllRoles)
                        {
                        <input type="checkbox" style="width:20px;height:20px;" name="roles" value="@role.Name"
                               /><font size="4">@role.Name</font> <br />
                        }
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Отмена</a>
    </div>
</div>
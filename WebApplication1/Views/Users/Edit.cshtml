@model WebApplication1.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование сотрудника";
}

<div class="container">

    <h2>Редактирование сотрудника</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" asp-controller="Users">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Никнейм</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Email</label>
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Имя</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label">Отчество</label>
                    <input type="text" asp-for="MiddleName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Фамилия</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label">Год рождения</label>
                    <input type="number" asp-for="Year" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DateImployment" class="control-label">Дата регистрации</label>
                    <input type="text" asp-for="DateImployment" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="FirmID" class="control-label">Фирма</label>
                    <select asp-for="FirmID" class="form-control" asp-items="ViewBag.Firms"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Отмена</a>
    </div>


</div>
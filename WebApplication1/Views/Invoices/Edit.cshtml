@model WebApplication1.Models.Invoice

@{
    ViewData["Title"] = "Изменить инвойс";
}
<div class="container">

    <h2>Изменить инвойс</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InvoiceID" />
                <div class="form-group">
                    <label asp-for="ProjectID" class="control-label">Проект</label>
                    <select asp-for="ProjectID" class="form-control" asp-items="ViewBag.ProjectID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ClientName" class="control-label">Клиент</label>
                    <input asp-for="ClientName" class="form-control" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountWait" class="control-label">Ожидаемая стоимость проекта</label>
                    <input asp-for="AmountWait" class="form-control" />
                    <span asp-validation-for="AmountWait" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountReal" class="control-label">Реальная стоимость проекта</label>
                    <input asp-for="AmountReal" class="form-control" />
                    <span asp-validation-for="AmountReal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatePaymentWait" class="control-label">Ожидаемая дата оплаты</label>
                    <input asp-for="DatePaymentWait" class="form-control" />
                    <span asp-validation-for="DatePaymentWait" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatePaymentReal" class="control-label">Реальная дата оплаты</label>
                    <input asp-for="DatePaymentReal" class="form-control" />
                    <span asp-validation-for="DatePaymentReal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Комментарий</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pay" class="control-label">Оплата</label>
                    <select asp-for="Pay" class="form-control" asp-items="ViewBag.Pay"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Отмена</a>
    </div>
</div>

